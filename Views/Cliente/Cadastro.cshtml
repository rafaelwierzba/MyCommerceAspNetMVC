@model ClienteModel

@{
    <h1 style="text-align: center">Cadastro de Cliente</h1>

    <br />

    <form asp-asp-controller="Cliente" asp-action="Cadastro" method="post">
        <input type="hidden" asp-for="Id" value="@try{@ViewBag.Cliente.Id} catch{}"/>

        <div class="form-group">
            <label>Nome</label>
            <input asp-for="Nome" type="text" class="form-control" value="@try{
            @ViewBag.Cliente.Nome
                } catch{}" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>CPF ou CNPJ</label>
            <input asp-for="CPF_CNPJ" type="text" class="form-control" value="@try{
            @ViewBag.Cliente.CPF_CNPJ
                } catch{}" />
            <span asp-validation-for="CPF_CNPJ" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" type="email" class="form-control" value="@try{
            @ViewBag.Cliente.Email
                } catch{}" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button class="btn btn-block btn-success" type="button" style="width: 100%">Cadastrar Cliente</button>
    </form>
}
