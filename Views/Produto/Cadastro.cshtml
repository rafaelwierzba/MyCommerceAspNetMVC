@model ProdutoModel

@{
    <h1 style="text-align: center">Cadastro de Produto</h1>

    <br />

    <form asp-asp-controller="Produto" asp-action="Cadastro" method="post">
        <input type="hidden" asp-for="Id" value="@try{@ViewBag.Produto.Id} catch{}"/>

        <div class="form-group">
            <label>Nome</label>
            <input asp-for="Nome" type="text" class="form-control" value="@try{
            @ViewBag.Produto.Nome
            } catch{}" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
               
        <div class="form-group">
            <label>Descrição</label>
            @{
                var vDescricao = "";
                try
                {
                    vDescricao = ViewBag.Produto.Descricao;
                }catch{}
            }

            @Html.TextArea("Descricao", vDescricao, new {@class="form-control"})
           <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Preço Unt.</label>
            <input asp-for="Preco_Unitario" type="text" class="form-control" value="@try{
                @ViewBag.Produto.Preco_Unitario
            } catch{}" />
            <span asp-validation-for="Preco_Unitario" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Qtd. em Estoque</label>
            <input asp-for="Quantidade_Estoque" type="text" class="form-control" value="@try{
                    @ViewBag.Produto.Quantidade_Estoque
            } catch{}" />
            <span asp-validation-for="Quantidade_Estoque" class="text-danger"></span>
        </div>

             <div class="form-group">
                <label>Und. de Medida</label>
            @{
                var vUnidadeMedida = "";
                try
                {
                    vUnidadeMedida = ViewBag.Produto.Unidade_Medida;
                }catch{}
            }

                 <select asp-for="Unidade_Medida" class="form-control">
                    
                     @{
                        if(vUnidadeMedida != "")
                        {
                            <option value="@vUnidadeMedida" selected>@vUnidadeMedida</option>
                        }
                     }

                    <option value="UN">UN</option>
                    <option value="CX">CX</option>
                    <option value="KG">KG</option>
                    <option value="G">G</option>
                    <option value="L">L</option>
                    <option value="TON">TON</option>
                 </select>   
                <span asp-validation-for="Unidade_Medida" class="text-danger"></span>
            </div>

        <div class="form-group">
            <label>Foto</label>
            @try
            {
                <img src="@try{
                        @ViewBag.Produto.Link_Foto } catch{}" width="150" heigth="150"/>
                
            }catch{

            }
            
            <input asp-for="Link_Foto" type="text" class="form-control" value="@try{
                    @ViewBag.Produto.Link_Foto
            } catch{}" />
            <span asp-validation-for="Link_Foto" class="text-danger"></span>
        </div>

        <button class="btn btn-block btn-success" type="button" style="width: 100%">Cadastrar Produto</button>
    </form>
    <br />
    <button class="btn btn-block btn-primary" type="button" style="width: 100%" onclick="Voltar()">Lista de Produtos</button>

    <script>
        function Voltar(){
            window.location.href = "../../Produto/Index";
        }
    </script>
}
